{
    "build": {
      "beforeBuildCommand": "trunk build",
      "beforeDevCommand": "trunk serve",
      "devPath": "http://localhost:8000",
      "distDir": "../proton/dist",
      "withGlobalTauri": true
    },
    "package": {
      "productName": "Proton",
      "version": "0.1.0"
    },
    "tauri": {
      "allowlist": {
        "all": true,
        "shell": {
          "sidecar": true,
          "scope": [
          ]
        }
      },
      "bundle": {
        "active": true,
        "targets": "all",
        "identifier": "com.github.scattered-systems.proton",
        "externalBin": [],
        "icon": [
          "icons/32x32.png",
          "icons/128x128.png",
          "icons/128x128@2x.png",
          "icons/icon.icns",
          "icons/icon.ico"
        ],
        "resources": [],
        "copyright": "",
        "category": "DeveloperTool",
        "deb": {
          "depends": []
        },
        "longDescription": "",
        "shortDescription": "",
        "macOS": {
          "frameworks": [],
          "minimumSystemVersion": "",
          "exceptionDomain": "localhost",
          "signingIdentity": null,
          "providerShortName": null,
          "entitlements": null
        },
        "windows": {
          "certificateThumbprint": null,
          "digestAlgorithm": "sha256",
          "timestampUrl": ""
        }
      },
      "security": {
        "csp": null
      },
      "updater": {
        "active": false
      },
      "windows": [
        {
          "fullscreen": false,
          "resizable": true,
          "title": "Proton",
          "height": 600,
          "width": 800
        }
      ]
    }
  }